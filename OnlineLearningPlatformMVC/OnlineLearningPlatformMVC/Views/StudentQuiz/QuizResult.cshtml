@model OnlineLearningPlatform.MVC.Models.Quiz.QuizResultViewModel
@{
    ViewData["Title"] = "Quiz Result";
}

<h2>Quiz Result</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Your Score: @Model.Score</h4>
        <p class="card-text">
            @if (Model.IsPassed)
            {
                <span class="text-success">Congratulations! You passed the quiz.</span>
            }
            else
            {
                <span class="text-danger">You didn't pass the quiz this time. Try again!</span>
            }
        </p>
        <p>Completed on: @Model.TakenAt.ToString("f")</p>
    </div>
</div>

